@model Assignment1.Models.AssignViewModel

@{
    ViewData["Title"] = "Tracking Homepage";
}
<div class=center>
    <h1>Tracking</h1>
</div>
<h3>Track your parcel</h3>
<body>
    <div class="container" style="background-co	r: #6a6a6a; padding: 10px;">
	    <form class="d-flex" action="~/Tracking/TrackingView" method="post">
            <input class="form-control me-2" type="text" placeholder="Search" aria-label="Search" id="ParcelID" name="ParcelID">
            <button class="btn btn-outline-success" type="submit">Search</button>
        </form>	
        <div class="table-responsive">
            <table id="Parcel" class="table table-striped table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>ParcelID</th>
                        <th>Description</th>
                        <th>Sender Name</th>
                        <th>Sender Tel No</th>
                        <th>Receiver Name</th>
                    </tr>
                </thead>
                <tbody>
                    @if(Model != null)
                    {                   
                            <tr>
                                <td>@Model.ParcelID</td>
                                <td>@Model.ItemDescription</td>
                                <td>@Model.SenderName</td>
                                <td>@Model.SenderTelNo</td>
                                <td>@Model.ReceiverName</td>
                            </tr>
                    }
                </tbody>
                <!-- Add more rows as needed -->
            </table>
        </div> 
    </div>
</body>
<div class="center">
    </br>
    <br />
    <h7>If you are a non-registered customer and wants to track a parcel, please contact us.</h7><br />
    <h7>However if you are a registered customer and you face some issues you can use the  </h7><br />
    <h7>feedback/enquiry feature to talk to a station manager.</h7>
</div>